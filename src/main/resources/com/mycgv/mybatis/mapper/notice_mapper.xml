	<select id="admin_list" resultType="com.springboot.mycgv.dto.NoticeDto">
		select rownum rno, nid, ntitle,nhits, to_char(ndate,'yyyy-mm-dd') ndate
		from (select nid, ntitle, nhits, ndate from mycgv_notice
				order by ndate desc)
